{
    "manifest_version": 3,
    "name": "ニコショ",
    "version": "1.0",
    "description": "ニコニコ動画のスクリーンショットを簡単に撮るChrome拡張",
    "permissions": [
      "activeTab",
      "scripting",
      "downloads"
    ],
    "action": {
        "default_icon": {
          "128": "icon128.png"
        },
        "default_title": "ニコショ",
        "default_popup": "popup.html"
      }
  }
  